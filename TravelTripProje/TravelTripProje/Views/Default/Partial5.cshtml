@using TravelTripProje.Models.Sınıflar
@model List<Blog>
<div class="box1-left">
    @foreach(var x in Model)
    {
    <div class="bot-img">
        <img src="@x.BlokImage" style="width:120px; height:65px;" alt="" />
    </div>
    <div class="bot-desc1">
        @if (x.Aciklama.Length > 100)
        {
            <p>@x.Aciklama.Substring(0, 100)</p>
        }
        else
        {
            <p>@x.Aciklama</p>
        }

    </div>
    <div class="clear"></div>
    }
</div>